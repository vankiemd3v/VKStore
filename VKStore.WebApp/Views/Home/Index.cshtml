<!-- Categories End -->
<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h3 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">SẢN PHẨM MỚI NHẤT</span></h3>
    <div class="row px-xl-5">
        @foreach(var product in Model.Products)
        {
            <div class="col-lg-2 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <center><img class="img-fluid w-100" src="@ViewBag.GetUrlApi/@product.ImagePath" alt="" style="text-align: center;max-width: 60%;margin-top: 30px; aspect-ratio: 2/2; object-fit: contain; "></center>
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="/Home/Details?id=@product.Id"><i class="fa fa-shopping-cart"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a style="font-size: 13.5px;" class="h6 text-decoration-none text-truncate" href="">@product.Name</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h6 style="color: #fd475a">@product.Price.ToString("N0")<sup> đ</sup></h6>
                        </div>
                    </div>
                </div>
            </div>
        }
      
    </div>
    <div style="text-align: center;">
        <button class="btn btn-primary"><a style="text-decoration: none; color: #6C757D" href="/Home/Product/">Xem thêm</></button>
    </div>
</div>
<!-- Products End -->
