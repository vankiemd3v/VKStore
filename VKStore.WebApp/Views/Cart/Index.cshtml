
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = @ViewBag.GetUrlApi;
}
@section scripts{
    <script src="/js/cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.initialize();
    </script>
}
<input type="hidden" id="urlImage" value="@url" />
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody class="align-middle" id="cartBody">
                    
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <center><h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Đơn hàng</span></h5></center>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Khách hàng:</h6>
                        <input id="txt_name" class="form-control" style="width: 350px;" />
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <h6 class="font-weight-medium">Số điện thoại:</h6>
                        <input id="txt_phoneNumber" class="form-control" style="width: 350px;" />
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <h6 class="font-weight-medium">Email:</h6>
                        <input id="txt_email" class="form-control" style="width: 350px;" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Địa chỉ nhận hàng:</h6>
                        <input id="txt_address" class="form-control" style="width: 350px;" />
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Tổng tiền</h5>
                        <h5 id="totalPayment"></h5>
                    </div>
                    <button id="btnOrder"  class="btn btn-block btn-primary font-weight-bold my-3 py-3 " >ĐẶT HÀNG</button>
                    <a href="/Home/Product/" class="btn btn-secondary btn-block btn-primary font-weight-bold my-3 py-3 ">TIẾP TỤC MUA SẮM</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
