@model VKStore.ViewModels.Catalog.Orders.CreateOrderRequestValidator;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = @ViewBag.GetUrlApi;
}
@section scripts{
    <script src="/js/cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.initialize();
    </script>
   
}

<input type="hidden" id="urlImage" value="@url" />
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                    <a  class="breadcrumb-item text-dark" href="/Home">Trang chủ</a>
                <span class="breadcrumb-item active"><a href="/Cart/Index" style="color: #3D464D !important">Giỏ hàng</a></span>
                </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody class="align-middle" id="cartBody">
                    
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <center><h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Đơn hàng</span></h5></center>
            <div class="bg-light p-30 mb-5">
                <form id="form-order" asp-action="Index">
                <div class="border-bottom pb-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="ShipName" class="control-label"></label>
                            <input asp-for="ShipName" id="shipName" class="form-control" required />
                            <span id="shipNameValid" asp-validation-for="ShipName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipAddress" class="control-label"></label>
                            <input asp-for="ShipAddress" id="shipAddress" class="form-control" required />
                            <span id="shipAddressValid" asp-validation-for="ShipAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipEmail" class="control-label"></label>
                            <input asp-for="ShipEmail" id="shipEmail" class="form-control" required />
                            <span id="shipEmailValid" asp-validation-for="ShipEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipPhoneNumber" class="control-label"></label>
                            <input asp-for="ShipPhoneNumber" id="shipPhoneNumber" class="form-control" required />
                            <span id="shipPhoneNumberValid" asp-validation-for="ShipPhoneNumber" class="text-danger"></span>
                        </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Tổng tiền</h5>
                        <h5 asp-for="TotalPayment" id="totalPayment"></h5>
                    </div>
                    <button id="btnOrder"  type="submit"  class="btn btn-block btn-primary font-weight-bold my-3 py-3 " >ĐẶT HÀNG</button>
                        <button class=" btn btn-secondary btn-block btn-primary font-weight-bold my-3 py-3">
                            <a style="text-decoration: none; color: #6C757D;" href="/Home/Product">Tiếp tục mua sắm</a>
                        </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
