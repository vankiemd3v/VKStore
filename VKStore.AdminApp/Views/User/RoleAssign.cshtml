@model VKStore.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">QUẢN TRỊ NGƯỜI DÙNG</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
        <li class="breadcrumb-item active">Người dùng</li>
        <li class="breadcrumb-item active">Phân quyền</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <b>Phân quyền</b>
        </div>
        <div class="card-body">
        <form asp-action="RoleAssign">
            <input type="hidden" value="@Model.Id" name="id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for(var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-group">
                    <label>
                            @Model.Roles[i].Name
                            <input type="checkbox" asp-for="Roles[i].Selected"/>
                            <input type="hidden" asp-for="Roles[i].Id"/>
                            <input type="hidden" asp-for="Roles[i].Name" />
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Quay lại</a>
            </div>
        </form>
        </div>
    </div>
</div>

